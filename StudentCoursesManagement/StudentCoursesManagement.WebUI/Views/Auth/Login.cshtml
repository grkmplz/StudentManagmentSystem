@using Microsoft.AspNetCore.Mvc.TagHelpers
@model LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="bg-gray-800 text-white rounded-xl shadow-2xl p-8 max-w-md w-full">
    <h3 class="text-3xl font-extrabold text-gray-300 text-center mb-6">Welcome Back</h3>
    <p class="text-center text-gray-300 mb-8">Please login to your account</p>

    <form id="login-form" asp-action="Login" method="post" novalidate>
        <div class="mb-5">
            <input asp-for="Email" class="w-full px-4 py-3 rounded-md bg-gray-700 border border-gray-600 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" placeholder="Email" required />
            <span asp-validation-for="Email" class="text-red-400 text-sm mt-1 block"></span>
        </div>
        <div class="mb-5">
            <input asp-for="Password" type="password" class="w-full px-4 py-3 rounded-md bg-gray-700 border border-gray-600 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" placeholder="Password" required />
            <span asp-validation-for="Password" class="text-red-400 text-sm mt-1 block"></span>
        </div>
        <div class="flex items-center mb-6">
            <input asp-for="RememberMe" type="checkbox" class="h-4 w-4 text-indigo-500 border-gray-600 rounded focus:ring-indigo-500 focus:ring-offset-gray-800" />
            <label asp-for="RememberMe" class="ml-2 text-gray-300">Remember Me</label>
        </div>
        <button type="submit" class="w-full bg-indigo-600 hover:bg-indigo-700 text-white py-3 rounded-lg font-medium transition duration-200 ease-in-out">Login</button>
    </form>

    <div class="text-center mt-6">
        <p class="text-gray-300">Don't have an account? <a asp-controller="Auth" asp-action="Register" class="text-indigo-400 hover:text-indigo-300 hover:underline">Register here</a></p>
    </div>
     @if (!ViewData.ModelState.IsValid)
                {
                    <div class="bg-red-500 text-white rounded-lg shadow-md p-4 mt-6">
                        <h5 class="font-bold">Error</h5>
                        <ul class="list-disc list-inside">
                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <li>@error.ErrorMessage</li>
                            }
                        </ul>
                    </div>
                }
</div>