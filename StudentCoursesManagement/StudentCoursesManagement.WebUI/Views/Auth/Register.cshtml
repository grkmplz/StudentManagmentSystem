@using Microsoft.AspNetCore.Mvc.TagHelpers
@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="bg-gray-800 text-white rounded-xl shadow-2xl p-8 max-w-md w-full">
    <h3 class="text-3xl font-extrabold text-gray-300 text-center mb-6">Create Your Account</h3>
    <p class="text-center text-gray-300 mb-8">Get started with a new account</p>

    @if (ViewBag.MailError != null)
    {
        <div class="bg-red-500 text-white rounded-lg shadow-md p-4 mb-6">
            <h5 class="font-bold">Error</h5>
            <ul class="list-disc list-inside">
                <li>@ViewBag.MailError.ToString()</li>
            </ul>
        </div>
    }

    <form id="register-form" asp-action="Register" method="post" novalidate>
        <div class="mb-5">
            <input asp-for="Email" class="w-full px-4 py-3 rounded-md bg-gray-700 border border-gray-600 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" placeholder="Email" required />
            <span asp-validation-for="Email" class="text-red-400 text-sm mt-1 block"></span>
        </div>
        <div class="mb-5">
            <input asp-for="Password" type="password" class="w-full px-4 py-3 rounded-md bg-gray-700 border border-gray-600 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" placeholder="Password" required />
            <span asp-validation-for="Password" class="text-red-400 text-sm mt-1 block"></span>
        </div>
        <div class="mb-5">
            <input asp-for="ConfirmPassword" type="password" class="w-full px-4 py-3 rounded-md bg-gray-700 border border-gray-600 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" placeholder="Confirm Password" required />
            <span asp-validation-for="ConfirmPassword" class="text-red-400 text-sm mt-1 block"></span>
        </div>
        <button type="submit" class="w-full bg-indigo-600 hover:bg-indigo-700 text-white py-3 rounded-lg font-medium transition duration-200 ease-in-out">Register</button>
    </form>

    <div class="text-center mt-6">
        <p class="text-gray-300">Already have an account? <a asp-controller="Auth" asp-action="Login" class="text-indigo-400 hover:text-indigo-300 hover:underline">Login here</a></p>
    </div>
</div>