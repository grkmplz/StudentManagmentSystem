@model StudentCoursesManagement.Domain.Entities.Department

@{
    ViewData["Title"] = "Edit Department";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="p-6 space-y-8">
    <h2 class="text-3xl font-bold text-white mb-4">Edit Department</h2>

    <div class="bg-gray-800 shadow-md rounded-lg p-6">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="DepartmentId" />

            <div class="mb-4">
                <label for="DepartmentName" class="block text-gray-300 text-sm font-bold mb-2">Department Name</label>
                <input asp-for="DepartmentName" class="bg-gray-700 text-white rounded-lg w-full py-2 px-4" />
                <span asp-validation-for="DepartmentName" class="text-red-500 text-sm"></span>
            </div>

            <div class="mb-4">
                <label for="IsActive" class="block text-gray-300 text-sm font-bold mb-2">Is Active?</label>
                <input asp-for="IsActive" type="checkbox" class="mr-2" />
            </div>

            <div class="flex justify-between items-center">
                <a href="@Url.Action("Index", "Departments")" 
                   class="bg-gray-600 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded">Previous Page</a>
                <button type="submit" 
                        class="bg-yellow-500 hover:bg-yellow-700 text-white font-bold py-2 px-4 rounded">✓ Save Changes</button>
            </div>
        </form>
    </div>
</div>
