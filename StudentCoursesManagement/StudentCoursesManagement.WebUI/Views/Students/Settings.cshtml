@model StudentCoursesManagement.Application.ViewModels.StudentViewModels.StudentDetailsViewModel
@{
    ViewData["Title"] = "Student Settings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="p-6 space-y-8">
    <h1 class="text-3xl font-bold text-white mb-4">Student Settings</h1>

    <div class="bg-gray-800 shadow-md rounded-lg p-6">
        <form asp-action="Settings" asp-controller="Students">
            <input type="hidden" asp-for="StudentId" />

            <div class="mb-4">
                <label for="FirstName" class="block text-gray-300 text-sm font-bold mb-2">Name</label>
                <input asp-for="FirstName" class="bg-gray-700 text-white rounded-lg w-full py-2 px-4 focus:outline-none focus:ring-2 focus:ring-blue-500" />
                <span asp-validation-for="FirstName" class="text-red-500 text-sm"></span>
            </div>

            <div class="mb-4">
                <label for="LastName" class="block text-gray-300 text-sm font-bold mb-2">Surname</label>
                <input asp-for="LastName" class="bg-gray-700 text-white rounded-lg w-full py-2 px-4 focus:outline-none focus:ring-2 focus:ring-blue-500" />
                <span asp-validation-for="LastName" class="text-red-500 text-sm"></span>
            </div>

            <div class="mb-4">
                <label for="UserName" class="block text-gray-300 text-sm font-bold mb-2">Username</label>
                <input asp-for="UserName" class="bg-gray-700 text-white rounded-lg w-full py-2 px-4 focus:outline-none focus:ring-2 focus:ring-blue-500" />
                <span asp-validation-for="UserName" class="text-red-500 text-sm"></span>
            </div>

            <div class="mb-4">
                <label for="Email" class="block text-gray-300 text-sm font-bold mb-2">Email</label>
                <input asp-for="Email" class="bg-gray-700 text-white rounded-lg w-full py-2 px-4 focus:outline-none focus:ring-2 focus:ring-blue-500" />
                <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
            </div>

            <div class="mb-4">
                <label for="EnrollmentDate" class="block text-gray-300 text-sm font-bold mb-2">Enrollment Date</label>
                <input asp-for="EnrollmentDate" type="datetime-local" readonly class="bg-gray-700 text-white rounded-lg w-full py-2 px-4 focus:outline-none focus:ring-2 focus:ring-blue-500" />
                <span asp-validation-for="EnrollmentDate" class="text-red-500 text-sm"></span>
            </div>

            <div class="flex justify-between items-center">
                <a href="@Url.Action("MyCourses", "Students")" class="bg-gray-600 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded">Previous Page</a>
                <button type="submit" class="bg-yellow-500 hover:bg-yellow-700 text-white font-bold py-2 px-4 rounded">✓ Save Changes</button>
            </div>
        </form>
    </div>
</div>