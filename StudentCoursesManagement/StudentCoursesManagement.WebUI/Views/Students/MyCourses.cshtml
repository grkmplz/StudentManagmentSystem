@using StudentCoursesManagement.Application.ViewModels
@model List<MyCoursesViewModel>
@{
    ViewData["Title"] = "My Courses";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="p-6 space-y-8">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold text-white">My Courses</h1>
    </div>

    @if(Model.Count() == 0)
    {
        <div class="rounded-lg p-6 flex justify-center items-center mt-12">
            <div class="text-center">
                <p class="mb-4 text-white">You don't have course. Try to contact with admin. </p>
                <img src="~/images/data_not_found_2.png" alt="Page Not Found" style="max-height:500px; max-width:500px;" />
            </div>
        </div>
    } 

    else
    {
    <div class="bg-gray-800 shadow-md rounded-lg p-6">
        <table class="min-w-full table-auto">
            <thead>
                <tr class="bg-gray-700 text-white uppercase text-sm leading-normal">
                    <th class="py-3 px-6 text-left">Course Name</th>
                </tr>
            </thead>
            <tbody class="text-gray-400 text-sm font-light">
                @foreach (var student in Model)
                {
                    <tr class="border-b border-gray-700 hover:bg-gray-600">
                        <td class="py-3 px-6 text-left">@student.CourseName</td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
    }
   
</div>