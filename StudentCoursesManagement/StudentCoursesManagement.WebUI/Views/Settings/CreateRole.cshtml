@using StudentCoursesManagement.Application.ViewModels.SettingsViewModel
@model CreateRoleViewModel
@{
    ViewData["Title"] = "Add Role";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container mt-5 mx-auto">
    <div class="bg-gray-800 shadow-md rounded-lg p-6">
        <h1 class="text-3xl font-bold text-white mb-6">Add New Role</h1>

        <form asp-action="CreateRole" method="post">
            <div class="mb-4">
                <label class="block text-gray-400 text-sm font-bold mb-2" for="RoleName">Role Name</label>
                <input type="text" name="RoleName" class="w-full bg-gray-700 text-white rounded-lg p-3" value="@Model.RoleName" />
                <span asp-validation-for="RoleName" class="text-red-500 text-sm"></span>
            </div>

            <button type="submit" class="bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded mt-4">✓ Save Role</button>
        </form>
    </div>
</div>