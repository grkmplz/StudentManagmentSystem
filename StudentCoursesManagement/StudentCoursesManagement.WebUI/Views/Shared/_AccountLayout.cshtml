<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Student Management</title>

    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet"/>
    <link href="~/css/auth.css" rel="stylesheet"/>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body class="bg-gradient-to-br from-gray-900 via-gray-800 to-black flex items-center justify-center min-h-screen relative overflow-hidden">
    <div class="absolute inset-0">
        <div class="absolute top-0 left-0 w-96 h-96 bg-gradient-to-br from-indigo-700 to-purple-900 opacity-30 rounded-full blur-3xl animate-pulse"></div>
        <div class="absolute bottom-20 right-20 w-80 h-80 bg-gradient-to-br from-gray-600 to-gray-800 opacity-40 rounded-full blur-2xl animate-pulse"></div>
        <div class="absolute top-40 left-40 w-72 h-72 bg-gradient-to-br from-blue-900 to-gray-700 opacity-20 rounded-full blur-2xl animate-bounce"></div>
    </div>

    <div class="relative z-10 flex items-center justify-center w-full">
        <div class="p-10 rounded-xl shadow-2xl bg-gray-800 bg-opacity-90 backdrop-blur-lg max-w-lg w-full">
            @RenderBody()
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/jsT/auth.js"></script>

    @RenderSection("Scripts", required: false)

    <style>
        @@keyframes bounce-slow {
            0%, 100% {
                transform: translateY(0);
            }
            50% {
                transform: translateY(-20px);
            }
        }

        @@keyframes pulse-soft {
            0% {
                opacity: 0.8;
            }
            50% {
                opacity: 0.4;
            }
            100% {
                opacity: 0.8;
            }
        }

        .animate-bounce {
            animation: bounce-slow 4s infinite;
        }

        .animate-pulse {
            animation: pulse-soft 6s infinite;
        }
    </style>
</body>
</html>